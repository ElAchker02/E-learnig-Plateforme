

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Inscription</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        
        
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
           
        {% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body style="background-color: #F9F8F9;">
        <div class="container d-flex justify-content-center" >
                <div class="formulaire bg-white rounded mt-5 p-4 w-50" style="box-shadow: 0px 10px 34px -15px rgba(0, 0, 0, 0.24);">
                    <h1>Donneés d'accès</h1>
                    {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        {{ form_row(registrationForm.NomUtilisateur , {label : "Nom d'utilisateur "}) }}
                    </div>
                    <div class="mb-3">{{ form_row(registrationForm.email , {label : 'Email '}) }}</div>
                    <div class="mb-3"> {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}</div>
                    {# <div class="mb-3">{{ form_row(registrationForm.agreeTerms, {label : 'Conditions '}) }}</div> #}
                    <div class="mb-3">{{ form_row(registrationForm.image, {label : 'Image '}) }}</div>
                    <button type="submit" class="btn">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
        </div>
    </body>
</html>

