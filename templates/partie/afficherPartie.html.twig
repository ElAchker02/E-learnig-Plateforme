{% extends 'base.html.twig' %}

{% block title %}Hello PartieController!{% endblock %}

{% block body %}
    <div class="row">
            <div class="pagetitle d-flex justify-content-between align-items-center">
                    <h1>Liste des parties</h1>
                {% if 'ENSEIGNANT' in app.session.get('roles') %}
                   <a href="{{ path('add_partie') }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i></a>
                {% endif %}
                   
            </div>
      {% for part in parties %}
          
            <div class="col-sm">
              <div class="card">
                <div class="card-body">
                <div class="d-flex justify-content-end mt-2">
                  {% if 'ENSEIGNANT' in app.session.get('roles') %}
                        <div class="actions d-flex justify-content-between align-items-center gap-2">
                              <a href="{{ path('edit_partie',{id : part.id}) }}" class="btn btn-primary "><i class="fa fa-file-edit"></i></a>
                              <a href="{{ path('delete_partie',{id : part.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                              </div>
                        
                {% endif %}
                </div>
                  <p>{{ part.description}}</p>
                  <hr>
                  <p>{% if part.images != null %}
                              <img src="{{ asset('imagePartie/' ~ part.images) }}" alt="{{part.images}}" width="77"
                                    height="50" class="fluid my-2 rounded">
                      {% else %}
                             Cette partie n'a pas de photo
                      {% endif %}
                  </p>
                  <hr>
                  <p> 
                  {% if part.info != null %}
                            {{part.info}}
                      {% else %}
                             Pas d'information
                      {% endif %}</p>    
                  <hr>
                   <p> {% if part.avertissement != null %}
                            {{part.avertissement}}
                      {% else %}
                            Pas d'avertissement
                      {% endif %}</p>
                      <hr>
                    <p>{{part.nomChap}}</p>
                    <hr>
                    <p>{{part.nomCours}}</p>
                 </div>

              </div>
   
            </div> 

      {% endfor %}
    </div>
{% endblock %}
